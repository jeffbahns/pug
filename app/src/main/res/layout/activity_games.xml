<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.squad.pug.GamesActivity"
    android:background="#141a31"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Squad&apos;s Game"
            android:id="@+id/gameCreator"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:textColor="#c1ddf7"
            android:layout_gravity="center" />
    </LinearLayout>

    <ImageView
        android:layout_width="300dp"
        android:layout_height="217dp"
        android:id="@+id/courtPhoto"
        android:layout_centerInParent="true"
        android:layout_alignParentLeft="false"
        android:layout_alignParentBottom="false"
        android:layout_alignParentTop="false"
        android:layout_alignWithParentIfMissing="false"
        android:src="@drawable/sixthmanicon_courtdefault"
        android:layout_gravity="center" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="timeCreated"
            android:id="@+id/timeCreated"
            android:textColor="#c1ddf7"
            android:layout_marginBottom="25dp"
            android:layout_above="@+id/dateCreated" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="dateCreated"
            android:id="@+id/dateCreated"
            android:textColor="#c1ddf7"
            android:layout_marginBottom="27dp"
            android:layout_above="@+id/numPlayers" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="numPlayers"
            android:id="@+id/numPlayers"
            android:textColor="#c1ddf7"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="41dp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/signIntoGame"
            android:layout_gravity="center"
            android:src="@drawable/login_selector"
            android:background="#00ffffff" />
    </LinearLayout>

</LinearLayout>
